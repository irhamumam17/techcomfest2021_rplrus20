<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".UI.DonasiJasaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_syarat_donasi_jasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:id="@+id/tv_syarat_donasi_jasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/toolbar_syarat_donasi_jasa"
        android:text="Syarat Syarat Donasi Jasa :"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_syarat_donasi_jasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/tv_syarat_donasi_jasa"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field_retangle"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:text="- Mampu dan mau memeberikan jasanya untuk mengajar."
                android:textSize="15dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/txt1"
                android:text="- Usia minimal 20 tahun,maskimal 30 tahun."
                android:textSize="15dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/txt2"
                android:text="- Pendidikan maksimal S1"
                android:textSize="15dp"
                android:textColor="@color/color_black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_syarat_berkas_jasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/cv_syarat_donasi_jasa"
        android:text="Syarat Berkas :"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/tv_syarat_berkas_jasa"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field_retangle"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:text="- Riwayat Hidup/Curiculum Vitae"
                android:textSize="15dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/txt2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/txt1_1"
                android:text="- Portofolio"
                android:textSize="15dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/txt3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/txt2_2"
                android:text="- Pas Foto"
                android:textSize="15dp"
                android:textColor="@color/color_black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_daftar_donasi_jasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Daftar Sekarang"
        android:textColor="@color/color_white"/>

</RelativeLayout>